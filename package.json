{
  "name": "html5-breakout-game",
  "version": "2.0.0",
  "description": "A modern, enhanced HTML5 Breakout game with power-ups, particle effects, and mobile support",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000 || python3 -m http.server 8000 || npx serve .",
    "dev": "npx live-server --port=8000",
    "build": "echo 'No build step required - static HTML/CSS/JS files'",
    "deploy": "vercel --prod",
    "lint:js": "npx eslint game.js",
    "lint:css": "npx stylelint style.css",
    "format": "npx prettier --write *.html *.css *.js *.md",
    "validate": "npx html-validate index.html",
    "lighthouse": "npx lighthouse http://localhost:8000 --output html --output-path ./lighthouse-report.html",
    "test": "echo 'No tests specified yet'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/html5-breakout-game.git"
  },
  "keywords": [
    "breakout",
    "game",
    "html5",
    "canvas",
    "javascript",
    "mobile",
    "touch",
    "responsive",
    "pwa",
    "particles",
    "power-ups",
    "arcade",
    "retro",
    "web-game"
  ],
  "author": {
    "name": "George Pricop",
    "email": "pricopgeorge@gmail.com",
    "url": "https://github.com/Gzeu"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gzeu/html5-breakout-game/issues"
  },
  "homepage": "https://html5-breakout-game.vercel.app/",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "html-validate": "^8.0.0",
    "lighthouse": "^11.0.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "serve": "^14.0.0",
    "stylelint": "^15.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "files": [
    "index.html",
    "style.css",
    "game.js",
    "README.md"
  ]
}